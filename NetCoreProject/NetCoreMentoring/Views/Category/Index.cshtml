@model CategoriesViewModel

<h1>Categories</h1>

<ul class="list-group categories">
    @foreach (var category in Model.Categories)
    {
    <li class="list-group-item">
        <p>@category.Name</p>
        <img class="category-img" src="@Url.Action("GetImage", new {categoryId = category.Id})" />
        <a asp-action="UpdateImage" asp-route-categoryId="@category.Id">Update image</a>
    </li>
    }
</ul>